<Window x:Class="WpfApp1.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window4" Height="566" Width="450">
    <Grid Margin="0,0,10,-87">
        <Button Content="Добавить " Height="44" Width="119" Click="button" HorizontalAlignment="Left" Margin="106,346,0,0" VerticalAlignment="Top" FontSize="16"/>
